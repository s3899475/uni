Rb = 1 Gbit/s
# max total rise time
tsys = 0.7 bit / Rb

ts = 0.1 ns
td = 0.2 ns
# dispersion time
tf = sqrt(tsys^2 - ts^2 - td^2)

Dco = 17 ps / (1 km * 1 nm)
Dlambda = 0.2 nm
# max length due to chromatic dispersion
len = tf / (Dco * Dlambda)
# max sections
secs = round(len / (2.5 km))
sec_len = secs * 2.5 km

sensitivity = -30

loss = 3*0.5 + (secs - 1)*0.1 + sec_len*(0.25 1/km) + 3
# output - loss >= sensitivity
# dBm
output = loss + sensitivity
# mW
10^((output)/10)
